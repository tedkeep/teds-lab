<%= render MainContainer::Component.new do %>
  <%= link_to blog_index_path, class: "inline-block bg-gray-100 rounded p-3 my-3 hover:bg-gray-200" do %>
    <i class="fas fa-chevron-left"></i> View all posts
  <% end %>

  <div class="mb-5 pb-5 border-b border-gray-200">
    <h1><%= @post.title %></h1>

    <p class="mb-0 font-semibold"><%= l @post.published_on %></p>
  </div>

  <div class="post my-3 space-y-5">
    <%= @post.body_html.html_safe %>
  </div>
<% end %>