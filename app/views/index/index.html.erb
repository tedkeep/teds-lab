<!-- Hero Section -->
<%= render MainContainer::Component.new do %>
  <div class="space-y-5 md:space-y-0 md:py-5 md:grid md:grid-cols-2 md:gap-x-4 md:place-content-center">
    <!-- left -->
    <div class="md:grid md:justify-items-start md:grid-cols-1 space-y-3 md:space-y-5">
      <h1>Hi! I'm Ted. ðŸ‘‹ <br>Welcome to my Lab. ðŸ§ª</h1>

      <p class="font-semibold md:text-lg lg:text-xl">This is where I <span>tinker with tech</span> and break things. <br>And <em>hopefully</em> learn something along the way.</p>

      <div class="animate-wiggle rounded-lg font-semibold md:text-lg lg:text-xl text-gray-100 bg-purple-500 px-5 py-2 inline-block">Alpha</div>

      <p class="md:text-lg lg:text-xl">It's a little bare here at the moment. <br>This is a new website of mine so consider this the alpha version.</p>
    </div>

    <!-- right -->
    <div class="mt-5 md:mt-0">
      <%= link_to testing_labs_hexa_pdf_index_path do %>
        <div class="w-full h-96 rounded-lg shadow-lg overflow-hidden transition duration-200 ease-in-out transform hover:scale-105">
          <div class="bg-purple-500 h-2/3 overflow-hidden">
            <%= image_tag "hexa_pdf.png" %>
          </div>
          <div class="bg-purple-500 p-5 h-1/3">
            <h2 class="text-gray-100">Generating PDFs using HexaPDF</h2>
