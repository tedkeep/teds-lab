          </div>
        </div>
      <% end %>
    </div>

  </div>
<% end %>

<!-- Feature Section -->
<%= render MainContainer::Component.new(styles: "md:space-y-5 bg-gray-100 shadow-md shadow-inner") do %>
  <div>
    <h2 class="inline-block font-sans text-xl md:text-2xl font-bold mr-3 mb-0">Check out my latest blog posts.</h2>
    <p class="inline-block font-semibold">My little journeys in discovering new technologies.</p>
  </div>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
    <% @posts.each do |post| %>
      <%= render Card::Component.new(title: post.title, description: l(post.published_on), link: blog_path(post.permalink)) %>
    <% end %>
  </div>
<% end %>